<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:gravity="center_horizontal"
        android:text="@string/main_wlfare_service"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/textSize16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@color/line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:paddingLeft="@dimen/dp_16"
        android:text="@string/wlfare_vpn"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/textSize15"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_save_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_home_choice_fourth"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center"
            android:text="@string/wlfare_save_tudi"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/tv_evray_day_hb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_wlfare_hongbao"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center"
            android:text="@string/home_choice_five_desc"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/tv_coin_travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_wlfare_coin_travel"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center"
            android:text="@string/wlfare_coin_travel"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/tv_make_money_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_wlfare_make_money_center"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center"
            android:text="@string/wlfare_make_money_center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/textSize12" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:paddingLeft="@dimen/dp_16"
        android:text="@string/wlfare_more_service"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/textSize15"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_alipay_hb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_wlfare_alipay_hb"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center"
            android:text="@string/wlfare_alipay_hongbao"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/tv_open_visa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_wlfare_open_visa"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center"
            android:text="@string/wlfare_open_visa"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/tv_want_browring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_wlfare_want_brrowing"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center"
            android:text="@string/wlfare_borrow_money"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/tv_want_financing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_wlfare_want_financing"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center"
            android:text="@string/wlfare_my_financing"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/textSize12" />
    </LinearLayout>
</LinearLayout>