<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/icon_mine_bg">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_60"
        android:src="@mipmap/icon_mine_photo" />

    <TextView
        android:id="@+id/tv_mine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_68"
        android:layout_toEndOf="@+id/iv_photo"
        android:layout_toRightOf="@+id/iv_photo"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize14"
        tools:text="小宝宝" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mine_name"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toEndOf="@+id/iv_photo"
        android:layout_toRightOf="@+id/iv_photo">

        <ImageView
            android:id="@+id/iv_unauthorized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_mine_unauthorized" />

        <TextView
            android:id="@+id/tv_unauthorized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_7"
            android:gravity="center"
            android:text="@string/mine_login_unauthorized"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14" />


    </LinearLayout>


    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:src="@mipmap/icon_mine_setting" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_155"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/shape_item_shadow_oval"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_accumulated_earnings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_14"
                android:gravity="center"
                android:text="¥0.00"
                android:textColor="@color/color_E83F5C"
                android:textSize="@dimen/textSize12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/mine_login_earnings"
                android:textColor="@color/color_E83F5C"
                android:textSize="@dimen/textSize12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_have_withdrawal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_14"
                android:gravity="center"
                android:text="¥0.00"
                android:textColor="@color/color_E83F5C"
                android:textSize="@dimen/textSize12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/mine_login_withdrawal"
                android:textColor="@color/color_E83F5C"
                android:textSize="@dimen/textSize12" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_can_withdrawal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_14"
                android:gravity="center"
                android:text="¥0.00"
                android:textColor="@color/color_E83F5C"
                android:textSize="@dimen/textSize12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/mine_login_not_withdrawal"
                android:textColor="@color/color_E83F5C"
                android:textSize="@dimen/textSize12" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
