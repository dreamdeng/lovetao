<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_earnings_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/earnings_withdrawal_amount"
            android:textColor="@color/color_F0B4C1"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/tv_withdraw_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_43"
            android:text="¥0.00"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize24" />

        <TextView
            android:id="@+id/tv_withdrawing_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_94"
            android:text="提现结算中金额:¥120.00"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/tv_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_51"
            android:background="@mipmap/icon_earnings_rectangle_bg"
            android:drawableLeft="@mipmap/icon_earnings_detail"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:text="@string/earnings_withdrawal"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="135dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_accumulated_earnings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:gravity="center"
                    android:text="@string/mine_login_earnings"
                    android:textColor="@color/color_F0B4C1"
                    android:textSize="@dimen/textSize12" />


                <TextView
                    android:id="@+id/tv_total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:gravity="center"
                    android:text="¥0.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize14" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center_vertical"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/ll_have_withdrawal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:gravity="center"
                    android:text="@string/earnings_no_account"
                    android:textColor="@color/color_F0B4C1"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/tv_not_withdrawing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:gravity="center"
                    android:text="¥0.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize14" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center_vertical"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/ll_can_withdrawal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:gravity="center"
                    android:text="@string/earnings_cumulative"
                    android:textColor="@color/color_F0B4C1"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/tv_total_withdrawal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:gravity="center"
                    android:text="¥0.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize14" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/shape_item_shadow_oval">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@mipmap/icon_earnings_today" />

        <TextView
            android:id="@+id/tv_earnings_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_6"
            android:gravity="center"
            android:text="今日"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/textSize14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_earnings_today"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/earnings_today_order"
                    android:textColor="@color/color_707477"
                    android:textSize="@dimen/textSize14" />

                <TextView
                    android:id="@+id/tv_today_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/color_444444"
                    android:textSize="@dimen/textSize14" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:background="@color/color_EEEEEE" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/earnings_order_money"
                    android:textColor="@color/color_707477"
                    android:textSize="@dimen/textSize14" />

                <TextView
                    android:id="@+id/tv_today_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="¥0.00"
                    android:textColor="@color/color_444444"
                    android:textSize="@dimen/textSize14" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/shape_item_shadow_oval">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@mipmap/icon_earnings_mouth" />

        <TextView
            android:id="@+id/tv_earnings_mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_6"
            android:gravity="center"
            android:text="本月"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/textSize14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_earnings_mouth"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/earnings_today_order"
                    android:textColor="@color/color_707477"
                    android:textSize="@dimen/textSize14" />

                <TextView
                    android:id="@+id/tv_mouth_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/color_444444"
                    android:textSize="@dimen/textSize14" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:background="@color/color_EEEEEE" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/earnings_order_money"
                    android:textColor="@color/color_707477"
                    android:textSize="@dimen/textSize14" />

                <TextView
                    android:id="@+id/tv_mouth_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="¥0.00"
                    android:textColor="@color/color_444444"
                    android:textSize="@dimen/textSize14" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_earnings_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_18"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@mipmap/icon_earnings_detail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_35"
            android:text="@string/earnings_detail" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@mipmap/icon_earnings_back" />

    </RelativeLayout>

</LinearLayout>