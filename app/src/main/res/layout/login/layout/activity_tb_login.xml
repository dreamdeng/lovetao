<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_66"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/app_name"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/textSize15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/tb_login_desc"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/textSize18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_tb_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_26"
        android:background="@drawable/shape_settings_exit_bg"
        android:gravity="center"
        android:text="@string/tb_login"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tb_login_str_desc"
            android:textSize="@dimen/textSize14" />

        <TextView
            android:id="@+id/tv_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tb_login_agreement"
            android:textColor="@color/color_E83F5C"
            android:textSize="@dimen/textSize14" />

    </LinearLayout>

</LinearLayout>