<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/bag_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:banner_indicatorGravity="bottom|center_horizontal"
        app:banner_pointAutoPlayAble="false"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_pointContainerLeftRightPadding="@dimen/dp_11"
        app:banner_pointDrawable="@drawable/selector_guilde_banner_indicator"
        app:banner_pointTopBottomMargin="@dimen/dp_83" />

    <TextView
        android:id="@+id/v_togo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:background="@mipmap/icon_guilde_btn"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_14"
        android:paddingTop="@dimen/dp_9"
        android:paddingRight="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_12"
        android:text="@string/ac_guilde_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize16"
        android:visibility="gone" />

</RelativeLayout>
